       android:layout_marginLeft="100dp"
       android:backgroundTint="@color/black"
       android:gravity="center"
       android:text="Press to notify"
       tools:layout_editor_absoluteX="104dp"
       tools:layout_editor_absoluteY="5dp" />

</LinearLayout>